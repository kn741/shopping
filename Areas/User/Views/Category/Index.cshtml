@using X.PagedList.Mvc.Core;
@using X.PagedList;
@model IEnumerable<shopping.Models.Categorys>

@{
    ViewData["Title"] = "分類基本資料維護";
    Layout = "_LayoutAdmin";
}
<div class="card card-size-max border-secondary">
    <div class="card-header bg-secondary text-white">
        <div class="pt-2 px-2">
            <div class="float-start">
                <h4>@SessionService.ActionName</h4>
            </div>
            <div class="float-end">
                <h4>@SessionService.PrgInfo</h4>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="overflow-scroll">
            <div class="row mx-1">
                <div class="col-md-12">
                    <div class="float-start">
                        @Html.PagedListPager((IPagedList)Model, x => Url.Action("Index", ActionService.Controller, new
                            {
                                area = ActionService.Area,
                                page = x
                            }))
                    </div>
                    <div class="float-start page-info">
                        @ViewBag.PageInfo
                    </div>
                    <div class="float-end">
                        @using (Html.BeginForm("Search", ActionService.Controller, new { area = ActionService.Area },
                        FormMethod.Post))
                        {
                            <table>
                                <tr>
                                    <td>
                                        <span class="control-label fw-bold">查詢條件：</span>
                                    </td>
                                    <td class="pr-2">
                                        <input id="SearchText" name="SearchText" type="text"
                                            class="form-control data-list-search-text" placeholder="請輸入查詢條件..."
                                            value="@ViewBag.SearchText" style="width:200px;" />
                                    </td>
                                    <td>
                                        <input type="submit" value="查詢" class="btn btn-primary" />
                                    </td>
                                </tr>
                            </table>
                        }
                    </div>
                </div>
            </div>
            <table class="table table-bordered">
                <thead class="table-secondary">
                    <tr>
                        <th>
                            @Html.ActionLink("新增", "CreateEdit", ActionService.Controller, new
                                { area = ActionService.Area, id = 0 }, new { @class = "btn btn-primary" })
                        </th>
                        <th>
                            @Html.ColumnSort("Categorys.IsEnabled", @Html.DisplayNameFor(model => model.IsEnabled))
                        </th>
                        <th>
                            @Html.ColumnSort("Categorys.SortNo", @Html.DisplayNameFor(model => model.SortNo))
                        </th>
                        <th>
                            @Html.ColumnSort("Categorys.CategoryNo", @Html.DisplayNameFor(model => model.CategoryNo))
                        </th>
                        <th>
                            @Html.ColumnSort("Categorys.CategoryName", @Html.DisplayNameFor(model => model.CategoryName))
                        </th>
                        <th>
                            @Html.ColumnSort("Categorys.Remark", @Html.DisplayNameFor(model => model.Remark))
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        string str_data = $"{item.CategoryNo} {item.CategoryName}";
                        <tr>
                            <td>
                                @Html.ActionLink("修改", "CreateEdit", ActionService.Controller, new
                                    {
                                        area = ActionService.Area,
                                        id = item.Id
                                    }, new { @class = "btn btn-success" })
                                @* @Html.ActionLink("刪除", "Delete", ActionService.Controller, new
                                    {
                                        area = ActionService.Area,
                                        id = item.Id
                                    }, new { @class = "btn btn-danger",onclick = "return confirm('是否確定要刪除?');"}) *@
                                <input type="button" id="delete" value="刪除" class="btn btn-danger"
                                onclick="DeleteData(@item.Id,'@str_data')" />
                                @Html.ActionLink("重設密碼", "ResetPassword", ActionService.Controller, new
                                    {
                                        area = ActionService.Area,
                                        id = item.Id
                                    }, new { @class = "btn btn-warning ",onclick = "return confirm('是否確定要重設密碼');" })
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.IsEnabled)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SortNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CategoryNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CategoryName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Remark)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>